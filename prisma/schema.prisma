generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id
  full_name  String
  email      String   @unique
  phone      String
  birth_date DateTime
  subscribed Boolean
  created_at DateTime
}
